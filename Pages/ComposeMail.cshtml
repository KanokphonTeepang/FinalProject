@page
@model FinalProject.Pages.ComposeModel
@{
}

<br />
<h2>SENDING EMAIL</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<form method="post">
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">To:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="emailreceiver" value="@Model.emailInfo.EmailReceiver">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Subject:</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="emailsubject" value="@Model.emailInfo.EmailSubject">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label">Messages</label>
        <div class="col-sm-6">
            <textarea class="form-control" name="emailmessage">@Model.emailInfo.EmailMessage</textarea>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="mb-3 row">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="mb-3 row">
        <div class="offset-sm-3 col-sm-6">
            <button type="submit" class="btn btn-primary">Send</button>
            <a class="btn btn-outline-primary" href="Index" role="button">Home</a>
        </div>
    </div>
</form>


